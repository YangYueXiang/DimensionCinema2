<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
   >
    <View
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:alpha="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        >

        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_170"
            android:gravity="center"
            android:text="无双"
            android:textSize="20sp" />
    </LinearLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/simp_pop_movie"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_200" />
    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/simp_pop_movie"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型:"
                />
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱情/戏剧"
                />
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_30"
                android:src="@drawable/ic_downa"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导演:"
                />
            <TextView
                android:id="@+id/tv_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱情/戏剧"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长:"
                />
            <TextView
                android:id="@+id/tv_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱情/戏剧"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产地:"
                />
            <TextView
                android:id="@+id/tv_placeoforigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱情/戏剧"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_marginTop="@dimen/dp_220"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="剧情简介"
            android:textSize="@dimen/dp_16"
            />

        <TextView
            android:id="@+id/tv_jianjie"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="演职人员"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/dp_16"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="wrap_content">
            <Button
                android:text="演员名字"
                android:gravity="center"
                android:background="#ff8000"
                android:textSize="@dimen/dp_12"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_32" />

            <Button
                android:background="#ff8000"
                android:textSize="@dimen/dp_12"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_138"
                android:text="饰演角色" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_performer01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="洛厄尼*或布洛克"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饰"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_role01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="慕容云海"
                    android:layout_marginLeft="@dimen/dp_213"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_performer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="洛厄尼*或布洛克"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饰"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_role02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="慕容云海"
                    android:layout_marginLeft="@dimen/dp_213"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_performer03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="洛厄尼*或布洛克"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饰"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_role03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="慕容云海"
                    android:layout_marginLeft="@dimen/dp_213"
                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_performer04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="洛厄尼*或布洛克"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="饰"
                    android:layout_centerHorizontal="true"
                    />
                <TextView
                    android:id="@+id/tv_role04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="慕容云海"
                    android:layout_marginLeft="@dimen/dp_213"
                    />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
